generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id             String    @id @default(cuid())
  title          String
  author         String
  yearPublished  Int
  notes          String?   @db.Text
  shortNotes     String?
  chapters       Chapter[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  series         String[]
  numberInSeries Int?
}

model Chapter {
  id        String           @id @default(cuid())
  title     String
  number    Int
  quote     String?
  notes     String?
  bookId    String
  book      Book             @relation(fields: [bookId], references: [id])
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  content   ChapterContent[]
}

model ChapterContent {
  id        String   @id @default(cuid())
  chapterId String
  chapter   Chapter  @relation(fields: [chapterId], references: [id])
  text      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Prayer {
  id        String   @id @default(cuid())
  title     String
  source    String
  series    String[]
  content   String   @db.Text
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rank      Int?
}

model Wisdom {
  id        String   @id @default(cuid())
  text      String   @db.Text
  source    String
  topics    String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
